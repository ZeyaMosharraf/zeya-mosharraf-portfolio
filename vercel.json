{
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        { "key": "Content-Type", "value": "application/xml" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/((?!sitemap\\.xml).*)", "destination": "/index.html" }
  ]
}
